{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Create Minimal requirements for InfraPipe",
    "Parameters": {
        "InfraPipeAwsAccountId": {
            "Type": "Number",
            "Description": "Please Enter AWS Account number."
        },
        "InfraPipeAWSAccountType": {
            "Type": "String",
            "Description": "Type of AWS Account (Standard or Master)"
        },
        "RestrictiveAWS": {
            "Type": "String",
            "Description": "Access via Shared Okta Chicklet (false or true)"
        }
    },
    "Resources": {
        "PipelineInfraPipe": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": "Pipeline-InfraPipe",
                "Path": "/enterprise/",
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "AWS": {
                                    "Fn::Sub": "arn:aws:iam::${InfraPipeAwsAccountId}:user/enterprise/terraform"
                                }
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                }
            }
        },
        "InfraPipeAwsPipelineAccountPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "InfraPipeAwsDevOps",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Action": "*",
                            "Effect": "Allow",
                            "Resource": "*"
                        }
                    ]
                },
                "Roles": [
                    {
                        "Ref": "PipelineInfraPipe"
                    }
                ]
            }
        },
        "TFUserPolicies": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "Pipeline",
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Resource": [
                            {
                                "Fn::Sub": "arn:aws:iam::${InfraPipeAwsAccountId}:role/enterprise/Pipeline-*"
                            },
                            {
                                "Fn::Sub": "arn:aws:iam::${InfraPipeAwsAccountId}:role/bu/Pipeline-*"
                            }
                        ]
                        }
                    ]
                },
                "Groups": [
                    {
                        "Ref": "PipelineGroup"
                    }
                ]
            }
        },
        "PipelineGroup": {
            "Type": "AWS::IAM::Group",
            "Properties": {
                "GroupName": "Pipeline",
                "Path": "/enterprise/"
            }
        },
        "Users": {
            "Type": "AWS::IAM::UserToGroupAddition",
            "Properties": {
                "GroupName": {
                    "Ref": "PipelineGroup"
                },
                "Users": [
                    "terraform"
                ]
            }
        },
        "InfraPipeAWSAccountType": {
            "Type": "AWS::SSM::Parameter",
            "Properties": {
                "Description": "Options (Standard or Master)",
                "Name": "InfraPipeAWSAccountType",
                "Type": "String",
                "Value": {
                    "Fn::Sub": "${AWSAccountType}"
                }
            }
        },
        "InfraPipeRestrictiveAWS": {
            "Type": "AWS::SSM::Parameter",
            "Properties": {
                "Description": "Options (false or true)",
                "Name": "InfraPipeRestrictiveAWS",
                "Type": "String",
                "Value": {
                    "Fn::Sub": "${RestrictiveAWS}"
                }
            }
        }
    },
    "Outputs": {
        "RoleId": {
            "Description": "The logical ID of the IAM role",
            "Value": {
                "Ref": "PipelineDevops"
            }
        },
        "RoleArn": {
            "Description": "The ARN of the IAM role",
            "Value": {
                "Fn::GetAtt": [
                    "PipelineDevops",
                    "Arn"
                ]
            }
        },
        "PolicyId": {
            "Description": "The logical ID of the IAM policy",
            "Value": {
                "Ref": "InfraPipeAwsPipelineAccountPolicy"
            }
        }
    }
}